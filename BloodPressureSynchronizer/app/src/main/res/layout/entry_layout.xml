<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dateLabel"
        android:layout_marginBottom="5dp"
        android:textColor="@android:color/darker_gray"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/sys_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sysLabel"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sysRate"
            android:layout_marginRight="20dp" />

        <TextView
            android:text="@string/dia_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/diaLabel"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/diaRate"
            android:layout_marginRight="20dp" />

        <TextView
            android:text="@string/pulse_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pulseLabel"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pulseRate"
            android:layout_marginRight="20dp"/>

    </LinearLayout>

</LinearLayout>